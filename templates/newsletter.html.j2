<!doctype html>
<html lang="fr">
<head>
  <meta charset="utf-8"><meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{ title }}</title>
  <style>body{font-family:system-ui,-apple-system,Segoe UI,Roboto,Helvetica,Arial,'Noto Sans',sans-serif;line-height:1.6;color:#0b1324;margin:0;background:#f7fafc} .wrap{max-width:760px;margin:0 auto;padding:24px} .card{background:#fff;border:1px solid #e5e7eb;border-radius:16px;padding:20px;margin:16px 0;box-shadow:0 6px 18px rgba(0,0,0,.04)} h1{margin:.2rem 0 1rem} h2{margin:1.2rem 0 .6rem} .meta{color:#64748b;font-size:12px} .jp{font-family:'Noto Sans JP','Hiragino Kaku Gothic ProN','Yu Gothic',Meiryo,sans-serif}</style>
</head>
<body>
  <div class="wrap">
    <h1>{{ title }}</h1>
    <p class="meta">Période : {{ period }}</p>
    {% for sec in sections %}
    <div class="card">
      <h2>{{ sec.heading }}</h2>
      <p>{{ sec.fr | safe }}</p>
      <p class="jp">{{ sec.jp | safe }}</p>
      {% if sec.places %}
      <ul>{% for p in sec.places %}
        <li><strong>{{ p.name }}</strong> — {{ p.city }}{% if p.address %}, {{ p.address }}{% endif %}{% if p.price %} • {{ p.price }}{% endif %}{% if p.map_url %} • <a href="{{ p.map_url }}">Map</a>{% endif %}</li>
      {% endfor %}</ul>{% endif %}
      {% if sec.sources %}<p class="meta">Sources : {% for s in sec.sources %}<a href="{{ s.url }}">{{ s.title }}</a>{% if not loop.last %} · {% endif %}{% endfor %}</p>{% endif %}
    </div>
    {% endfor %}
    <p class="meta">Généré par Mistral AI · {{ generated_at }}</p>
  </div>
</body>
</html>
